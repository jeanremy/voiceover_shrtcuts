---
import '../styles/styles.css'
const {
  frontmatter: { title },
} = Astro.props
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
  </head>
  <body>
    <header class="app-header">
      <div class="container">
        <p class="app-title">
          <a href="/">VoiceOver <span>shortcuts</span></a>
        </p>
      </div>
    </header>
    <main class="app-content">
      <div class="container">
        <article class="content">
          <h1>{title}</h1>
          <slot />
        </article>
      </div>
    </main>
    <footer class="app-footer">
      <div class="container">
        <a href="/about" aria-current="page">About</a>
      </div>
    </footer>
  </body>
</html>
